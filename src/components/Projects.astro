---
import ProjectsView from "./ProjectsView.astro";
import ProjectCard from "./ProjectCard.astro";
import projectsItems from "../data/ProjectsItems";
---

<section class="container" id="projects">
  <div class="section-title">
    <div class="neon-circle">      <img id="rocket" src="/assets/icons/rocket-2.svg" alt="">
    </div>
  </div>
  <div class="title">
    <h2>Projects</h2>
    <p>Some projects I have done.</p>
  </div>
  <ProjectsView>
    {
      projectsItems.map(item => <ProjectCard {...item} />)
    }
  </ProjectsView>
  <div class="arrow-down-container">
    <a href="#experience">
      <img id="arrow-down" src="/assets/icons/arrow-down.svg" alt="Arrow down icon">
    </a>
  </div>
</section>

<style lang="scss" scoped>
  @import '../styles/_variables.scss';
  #projects {
    color: $gray;
    .section-title {
      .neon-circle {
        position: absolute;
        z-index: 1;
        width: 100vw;
        height: 200%;
        
        #rocket {
          width: 10%;
          position: absolute;
          top: 7.5%;
          left: 30%;
          transform: translate(-50%, -50%);
          filter: drop-shadow(5px 10px 10px #253141);
        }
      } 
    }
    .title {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding-top: 7rem;
      text-align: center;
      font-size: 2.5rem;
      p {
        color: $gray-text;
        padding-left: 3.3%;
        font-size: 1.2rem;
      }
    }
    .arrow-down-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 8rem;
      a {
        #arrow-down {
          width: 90px;
          height: 90px;
        }
      } 
    }
  }
  
  @keyframes flicker {
    0%, 100% {
        opacity: 1;
    }
    25%, 75% {
        opacity: 0.7;
    }
    50% {
        opacity: 0.5;
    }
  }

  @media only screen and (max-width: 375px) {
    #projects {
      .section-title {
        .neon-circle {
          width: 100vw;
          height: 200%;
          #rocket {
            width: 50%;
            top: 5%;
            left: 45%;
          }
        }
      }

      .title {
        padding-top: 13rem;
        p {
          padding-left: 0;
        }
      }
    }
  }
</style>