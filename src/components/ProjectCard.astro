---
import type { ProjectItem } from "../types/types";
interface Props extends ProjectItem {};
const { image, title, description, repoUrl, websiteUrl } = Astro.props
---

<div class="project-card" id="project">
  <div class="project-img">
    <img src={image} alt="Project image">
  </div>
  <div class="card-info">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="links">
      <a target="_blank" class="code button" href={repoUrl}><i class="fa-solid fa-code"></i>Code</a>
      <a target="_blank" class="website button" href={websiteUrl}><i class="fa-solid fa-right-to-bracket"></i>Website</a>
    </div>
  </div>
</div>

<style lang="scss" scoped>
  @import '../styles/_variables.scss';

  .project-card {
    border-radius: 9px;
    border: 1px solid #000;
    display: flex;
    flex-direction: column;
    align-items: start;
    width: 33.33%;
    padding-bottom: 1.5rem;
    transition: .5s;
    
    transition: filter 0.5s ease;

    &:hover {
      box-shadow: 0 0 0 0 $black, 8px 8px 0 0 $black;
      transition: .5s;
      filter: grayscale(0%);
    }
    .project-img {
      height: 295.09px;
      filter: grayscale(100%);
      img {
        border-radius: 9px 9px 0 0;
        width: 100%;
      }
      &:hover {
        filter: grayscale(0%);
        transition: .5s;
      }
    }   
    .card-info {
      border-radius: 4px;
      padding: 0 0 3rem 0;
      width: 100%;
      height: 9rem;
      h3 {
        font-weight: 600;
        letter-spacing: .5px;
        margin-bottom: .5rem;
        border-bottom: 1px solid #222;
        border-top: 1px solid #222;
        padding-left: 1rem;
        padding-bottom: 1rem;
        padding-top: 1rem;
      }
      p {
        line-height: 20px;
        
        padding-left: 1rem;
        height: 6rem;
      }
      .links {
        display: flex;
        flex-direction: row;
        padding-left: 1rem;
        gap: .5rem;
        a {
          display: flex;
          flex-direction: row;
          align-items: center;
          gap: .5rem;
          text-decoration: none;
          color: $gray;
        }
        .button {
          border-radius: 99px;
          padding: .3rem 1rem;
          font-weight: 600;
        }
        .code {
          font-weight: 400;
          color: #17B877;
          background-color: #166646;
          &:hover {
            text-shadow: 0 0 10px #17B877, 0 0 20px #17B877, 0 0 30px #17B877, 0 0 40px #17B877;
          }
        }
        .website {
          font-weight: 400;
          background-color: #503b7a;
          color: #a87ffb;
          &:hover {
            text-shadow: 0 0 10px #a87ffb, 0 0 20px #a87ffb, 0 0 30px #a87ffb, 0 0 40px #a87ffb;
          }
        }
      }
    }
  }

  @media only screen and (max-width: 600px) {
    .project-card {
      width: 100%;
      .project-img {
        img {
          width: 100%;
        }
      }

      &:nth-child(4) {
        .card-info > p {
          height: 7rem;
        }
      }
      .card-info {
        p{
          font-size: .9rem;
          width: 90%;
        }
      }
    }
  }
</style>