---
import type { ProjectItem } from "../types/types";
interface Props extends ProjectItem {};
const { image, title, description, repoUrl, websiteUrl } = Astro.props
---

<div class="project-card" id="project">
  <div class="project-img">
    <img src={image} alt="Project image">
  </div>
  <div class="card-info">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="links">
      <a target="_blank" class="code button" href={repoUrl}><i class="fa-solid fa-code"></i>Code</a>
      <a target="_blank" class="website button" href={websiteUrl}><i class="fa-solid fa-right-to-bracket"></i>Website</a>
    </div>
  </div>
</div>

<style lang="scss" scoped>
  @import '../styles/_variables.scss';

  .project-card {
    border: 1px solid #302f41;
    display: flex;
    flex-direction: column;
    align-items: start;
    width: calc(33.33% - 10px);
    .project-img {
      img {
        filter: brightness(85%);
        width: 100%;
      }
    }
    
    .card-info {
      background-image: radial-gradient(circle, #192944, #17243a, #141f30, #121a26, #10151d);
      border-radius: 0 0 20px 20px;
      padding: 1rem 1rem 1.5rem 1rem;
      height: 9rem;
      h3 {
        font-weight: 600;
        letter-spacing: .5px;
        margin-bottom: .5rem;
      }
      p {
        line-height: 20px;
        width: 100%;
        height: 6rem;
      }
      .links {
        display: flex;
        flex-direction: row;
        gap: .5rem;
        a {
          display: flex;
          flex-direction: row;
          align-items: center;
          gap: .5rem;
          text-decoration: none;
          color: $gray;
        }
        .button {
          border-radius: 99px;
          padding: .3rem 1rem;
          font-weight: 600;
        }
        .code {
          font-weight: 400;
          color: #17B877;
          background-color: #166646;
          &:hover {
            text-shadow: 0 0 10px #17B877, 0 0 20px #17B877, 0 0 30px #17B877, 0 0 40px #17B877;
          }
        }
        .website {
          font-weight: 400;
          background-color: #503b7a;
          color: #a87ffb;
          &:hover {
            text-shadow: 0 0 10px #a87ffb, 0 0 20px #a87ffb, 0 0 30px #a87ffb, 0 0 40px #a87ffb;
          }
        }
      }
    }
  }

  @media only screen and (max-width: 375px) {
    .project-card {
      width: 100%;
      .project-img {
        img {
          width: 100%;
        }
      }

      &:nth-child(4) {
        .card-info > p {
          height: 7rem;
        }
      }
    }
  }
</style>