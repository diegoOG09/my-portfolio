<style lang="scss" is:global>
	.light-effect {
    width: 100vw;
    height: 200%;
    position: absolute;
		left: 0%;
	}

	.light-beam {
		width: 100%;
		height: 100%;
		background: radial-gradient(ellipse at center, rgba(19, 31, 51, 1) 5%, rgba(19, 31, 51, 0) 50%);
		border-radius: 50%;
		position: absolute;
		top: -60%;
		
		transform: rotate(45deg);
		// animation: flicker 5s infinite;
	}

	@keyframes flicker {
		0%, 100% {
				opacity: 1;
		}
		25%, 75% {
				opacity: 0.7;
		}
		50% {
				opacity: 0.5;
		}
	}
	
