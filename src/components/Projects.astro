---
import ProjectsView from "./ProjectsView.astro";
import ProjectCard from "./ProjectCard.astro";
import projectsItems from "../data/ProjectsItems";
---

<section class="container" id="projects">
  <div class="section-title">
    <div class="neon-circle">
      <div class="neon-beam"></div>
      <img id="rocket" src="/assets/icons/rocket-2.svg" alt="">
    </div>
  </div>
  <div class="title">
    <h2>Projects</h2>
    <p>In some projects I can't share the code because of privacy policies.</p>
  </div>
  <div class="light-effect">
    <div class="light-beam"></div>
  </div>
  <ProjectsView>
    {
      projectsItems.map(item => <ProjectCard {...item} />)
    }
  </ProjectsView>
</section>

<style lang="scss" scoped>
  @import '../styles/_variables.scss';
  #projects {
    color: $gray;
    .section-title {
      .neon-circle {
        position: absolute;
        z-index: 1;
        width: 100vw;
        height: 200%;
        .neon-beam {
          width: 20%;
          height: 20%;
          background: radial-gradient(ellipse at center, rgb(168, 127, 251) 5%, rgba(168, 127, 251, 0) 50%);
          border-radius: 50%;
          position: relative;
          top: -2%;
          left: 20%;
          transform: rotate(45deg);
        }
        #rocket {
          width: 10%;
          position: absolute;
          top: 7.5%;
          left: 30%;
          transform: translate(-50%, -50%);
          filter: drop-shadow(5px 10px 10px #253141);
        }
      } 
    }
    .title {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding-top: 7rem;
      text-align: center;
      font-size: 2.5rem;
      p {
        color: $gray-text;
        padding-left: 19.3%;
        font-size: 1.2rem;
      }
    }
  }
  .light-effect {
    width: 100vw;
    height: 200%;
    position: absolute;
    z-index: -1;
  }
  .light-beam {
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, rgb(25, 41, 68) 5%, rgba(25, 41, 68, 0) 50%);
    border-radius: 50%;
    position: relative;
    top: -50%;
    left: -3.5%;
    transform: rotate(45deg);
    animation: flicker 10s infinite;
  }
  
  @keyframes flicker {
    0%, 100% {
        opacity: 1;
    }
    25%, 75% {
        opacity: 0.7;
    }
    50% {
        opacity: 0.5;
    }
  }
</style>