---
import type { ExpItem } from "../types/types";
interface Props extends ExpItem {};
const { title, position, description, location, date } = Astro.props;
---

<div class="experience-card">
  <div class="card-meta-info">
    <div class="flex-info-left">
      <h4>{title}</h4>
      <span>{location} {date}</span>
    </div>
    <div class="flex-info-right">
      <span>{position}</span>
    </div>
  </div>
  <div class="card-description">
    <ul>
      {description.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
</div>

<style lang="scss" >
  @import '../styles/_variables.scss';
  .experience-card {
    border: 1px solid $black;
    border-radius: 15px;
    color: $black;
    font-size: 1.3rem;

    .card-meta-info {
      .flex-info-left {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        border-bottom: 1px solid $black;
        padding: 1.5rem;
        h4 {
          color: $black;
        }
        span {
          font-size: 1.2rem;
        }
      }
      .flex-info-right {
        span {
          font-size: 1.2rem;
        }
        padding: 1rem 0 0 1.5rem;
        &:nth-child(2) {
          color: $black;
          font-size: 1rem;
          font-style: italic;
        }
      }
    }
    .card-description {
      color: $black;
      ul > li {
        line-height: 2rem;
      }
    }
  }

  @media only screen and (max-width: 600px) {
    .experience-card {
      .card-meta-info {
        .flex-info-left {
          h4 {
            font-size: 1.1rem;
          }
          span {
            font-size: 1rem;
          }
        }
      }
      .card-description {
        li {
          font-size: 1rem;
        }
      }
    }
  }
</style>